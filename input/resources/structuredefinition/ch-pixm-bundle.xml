<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="ch-pixm-bundle" />
  <text>
    <status value="additional" />
    <div xmlns="http://www.w3.org/1999/xhtml">
StructureDefinition for Bundle resource constraints in the CH EPR mHealth Implementation Guide </div>
  </text>
  <url value="http://fhir.ch/ig/ch-epr-mhealth/StructureDefinition/ch-pixm-bundle" />
  <name value="CHPIXm_Bundle_CH" />
  <title value="CH:PIXm Bundle Feed Message" />
  <status value="draft" />
  <date value="2020-06-15" />
  <publisher value="eHealth Suisse"/>
  <contact>
    <name value="eHealth Suisse"/>
    <telecom>
      <system value="url"/>
      <value value="https://www.e-health-suisse.ch"/>
    </telecom>
  </contact>
  <description value="Feed / Update or Merge Patient resources. Patients must conform to the ch-pixm-patient profile" />
  <purpose value="Provide local identifier with the initial demographics of the patient in the community." />
  <fhirVersion value="4.0.1" />
  <mapping>
    <identity value="v2" />
    <uri value="http://hl7.org/v2" />
    <name value="HL7 v2 Mapping" />
  </mapping>
  <mapping>
    <identity value="rim" />
    <uri value="http://hl7.org/v3" />
    <name value="RIM Mapping" />
  </mapping>
  <mapping>
    <identity value="cda" />
    <uri value="http://hl7.org/v3/cda" />
    <name value="CDA (R2)" />
  </mapping>
  <mapping>
    <identity value="w5" />
    <uri value="http://hl7.org/fhir/fivews" />
    <name value="FiveWs Pattern Mapping" />
  </mapping>
  <kind value="resource" />
  <abstract value="false" />
  <type value="Bundle" />
  <baseDefinition value="http://ihe.net/fhir/StructureDefinition/IHE.PMIR.Bundle" />
  <derivation value="constraint" />
  <differential>
    <element id="Bundle">
      <path value="Bundle"/>
      <short value="CH CH:PIXm Bundle Message"/>
      <min value="0"/>
      <max value="*"/>
      <constraint>
        <key value="ch-pixm-bdl-1"/>
        <severity value="error"/>
        <human value="Patient resources in the bundle must conform to the ch-pixm-patient restrictions"/>
        <expression value="entry.resource.entry.all(resource.conformsTo('http://fhir.ch/ig/ch-epr-mhealth/StructureDefinition/ch-pixm-patient'))"/>
      </constraint>
    </element>
    <element id="Bundle.entry">
      <path value="Bundle.entry"/>
      <mustSupport value="true" />
    </element>
    <element id="Bundle.entry:PMIRMessageHeaderEntry">
      <path value="Bundle.entry"/>
      <sliceName value="PMIRMessageHeaderEntry"/>
      <mustSupport value="true" />
    </element>
    <element id="Bundle.entry:PMIRMessageHeaderEntry.resource">
      <path value="Bundle.entry.resource"/>
      <mustSupport value="true" /> 
    </element>
    <element id="Bundle.entry:PMIRBundleHistoryEntry">
      <path value="Bundle.entry"/>
      <sliceName value="PMIRBundleHistoryEntry"/>
      <mustSupport value="true" /> 
    </element>
    <element id="Bundle.entry:PMIRBundleHistoryEntry.resource">
      <path value="Bundle.entry.resource"/>
      <mustSupport value="true" /> 
    </element>
  </differential>
</StructureDefinition>